<!-- app/views/users/new.html.erb -->
<h1>Users#new</h1>
<%= form_with model: @user do |f| %>
  <% if @user.errors.any? %>
    <div>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :role %><br>
    <%= f.select :role, User.localized_roles.to_a.map(&:reverse), { include_blank: true } %>
  </div>
  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<main class="main">
  <!-- Get A Quote Section -->
  <section id="get-a-quote" class="get-a-quote section">

    <div class="container">

      <div class="row g-0" data-aos="fade-up" data-aos-delay="100">

        <div class="col-lg-5 quote-bg" style="background-image: <%= image_url("quote-bg.jpg") %>;"></div>

        <div class="col-lg-7" data-aos="fade-up" data-aos-delay="200">
          <%= form_with model: @user, class: "php-email-form" do |f| %>
            <h3>Регистрация</h3>
            <p>Заполните все необходимые поля</p>

            <div class="row gy-4">
              <div class="col-lg-12">
                <h4>Your Personal Details</h4>
              </div>

              <div class="col-md-12">
                <%= f.text_field :name, class: "form-control", placeholder: "Имя" %>
              </div>

              <div class="col-md-12 ">
                <%= f.email_field :email, class: "form-control", placeholder: "Почтовый адрес" %>
              </div>

              <div class="col-md-12">
                <%= f.password_field :password, class: "form-control", placeholder: "Пароль" %>
              </div>

              <div class="col-md-12">
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Подтверждение пароля" %>
              </div>

              <div class="col-md-12 text-center">
                <%= f.submit "Выполнить вход", class: "btn btn-primary" %>
              </div>

            </div>
          <% end %>
        </div><!-- End Quote Form -->

      </div>

    </div>

  </section><!-- /Get A Quote Section -->

</main>