<h1>Список заказов</h1>

<table>
  <tr>
    <th>Номер</th>
    <th>Адрес доставки</th>
    <th>Статус</th>
  </tr>
  <% @orders.each do |order| %>
    <td><%= order.id %></td>
    <td><%= order.delivery_address %></td>
    <td><%= order.localized_status %></td>
    <td><%= link_to order %></td>
  <% end %>
</table>
