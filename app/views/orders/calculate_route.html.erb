<section id="hero" class="hero d-flex align-items-center">
  <div class="container">
    <div class="row gy-4 d-flex justify-content-between">
      <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center">
        <h2 data-aos="fade-up">Найден оптимальный маршрут</h2>
        <h3>Время в пути (минуты): <%= @duration[:total_time] %></h3>
        <br>
        <h3>Детали маршрута:</h3>
        <ol>
          <% @duration[:checkpoints].each do |start_address, destination_address, time| %>
            <li><%= "#{start_address} -> #{destination_address} (#{time} мин. в пути)" %></li>
          <% end %>
        </ol>
      </div>
    </div>
  </div>
</section>

