<main class="main">
  <!-- Get A Quote Section -->
  <section id="get-a-quote" class="get-a-quote section">

    <div class="container">

      <div class="row g-0" data-aos="fade-up" data-aos-delay="100">

        <div class="col-lg-5 quote-bg" style="background-image: <%= image_url("quote-bg.jpg") %>;"></div>

        <div class="col-lg-7" data-aos="fade-up" data-aos-delay="200">
          <%= form_with model: @user, url: user_sessions_path, class: "php-email-form" do |f| %>
            <h3>Аутентификация</h3>
            <p>Введите данные от вашей учетной записи</p>

            <div class="row gy-4">

              <div class="col-lg-12">
                <h4>Нет учетной записи? Зарегистрируйтесь!</h4>
              </div>

              <div class="col-md-12 ">
                <%= f.email_field :email, class: "form-control", placeholder: "Почтовый адрес" %>
              </div>

              <div class="col-md-12">
                <%= f.password_field :password, class: "form-control", placeholder: "Пароль"  %>
              </div>

              <div class="col-md-12 text-center">
                <%= f.submit "Выполнить вход", class: "btn btn-primary" %>
              </div>

            </div>
          <% end %>
        </div><!-- End Quote Form -->

      </div>

    </div>

  </section><!-- /Get A Quote Section -->

</main>
