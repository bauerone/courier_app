<main id="main">

  <!-- ======= Breadcrumbs ======= -->
  <div class="breadcrumbs">
    <div class="page-header d-flex align-items-center" style="background-image: <%= image_url("page-header.jpg") %>;">
      <div class="container position-relative">
        <div class="row d-flex justify-content-center">
          <div class="col-lg-6 text-center">
            <h2>Товары</h2>
            <p>Описание страницы товаров.</p>
          </div>
        </div>
      </div>
    </div>
    <nav>
      <div class="container">
        <ol>
          <li><%= link_to "Главная", root_path %></li>
          <li>Товары</li>
        </ol>
      </div>
    </nav>
  </div><!-- End Breadcrumbs -->

  <!-- ======= Horizontal Pricing Section ======= -->
  <section id="horizontal-pricing" class="horizontal-pricing pt-0">
    <div class="container" data-aos="fade-up">

      <div class="section-header">
        <span>Ассортимент</span>
        <h2>Ассортимент</h2>

      </div>

      <div class="jumbotron">
        <%= form_with url: "/products", class: "form-search d-flex align-items-stretch mb-3", method: :get do |f| %>
          <%= f.text_field :search, class: "form-control", placeholder: "Найдите необходимые товары!", "aria-describedby": "basic-addon2" %>
          <%= f.submit 'Найти', class: "btn btn-primary" %>
        <% end %>
      </div>

      <% @products.each do |product| %>
        <div class="row gy-4 pricing-item mt-4" data-aos="fade-up" data-aos-delay="300">
          <div class="col-lg-3 d-flex align-items-center justify-content-center">
            <h3><%= product.name %></h3>
          </div>
          <div class="col-lg-3 d-flex align-items-center justify-content-center">
            <% if product.image.persisted? %>
              <%= image_tag(product.image) %>
            <% else %>
              <%= image_tag("image-placeholder.jpg", size: 400) %>
            <% end %>
          </div>
          <div class="col-lg-3 d-flex align-items-center justify-content-center">
            <h4><%= product.price %><span>₽</span></h4>
          </div>
          <div class="col-lg-3 d-flex align-items-center justify-content-center">
            <ul>
              <li><i class="bi bi-check"></i> <%= product.description %></li>
            </ul>
          </div>
          <div class="col-lg-3 d-flex align-items-center justify-content-center">
            <div class="text-center">
              <%= link_to "Добавить в корзину", add_product_to_cart_path(product_id: product.id), method: :post, class: "buy-btn" %>
            </div>
          </div>
        </div><!-- End Pricing Item -->
      <% end %>
    </div>
  </section><!-- End Horizontal Pricing Section -->

</main><!-- End #main -->
