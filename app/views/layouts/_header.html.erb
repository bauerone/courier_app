<!-- ======= Header ======= -->
<header id="header" class="header d-flex align-items-center fixed-top sticked">
  <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
    <a href="<%= root_path %>" class="logo d-flex align-items-center">
      <!-- Uncomment the line below if you also wish to use an image logo -->
      <!-- <img src="assets/images/logo.png" alt=""> -->
      <h1>СОСиК</h1>
    </a>
    <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
    <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
    <nav id="navbar" class="navbar">
      <ul>
        <li><%= link_to "Главная", root_path, class: "active" %></li>
        <% if current_user&.customer? %>
          <li><%= link_to "Товары", products_path %></li>
        <% end %>
        <li><%= link_to "Заказы", orders_path %></li>
        <% if current_user&.admin? %>
          <li><%= link_to "Администрирование", root_path %></li>
        <% end %>
        <% if current_user %>
          <li><%= link_to "Текущая роль пользователя: #{current_user.localized_role}", orders_path %></li>
          <li><%= link_to "Выйти", user_session_path(current_user), data: { turbo_method: :delete }, class: "get-a-quote" %></li>
        <% else %>
          <li><%= link_to "Войти", new_user_session_path, class: "get-a-quote" %></li>
        <% end %>
      </ul>
    </nav><!-- .navbar -->
  </div>
</header><!-- End Header -->
<!-- End Header -->